FROM python:3.11-slim-bullseye AS base
RUN apt-get update \
    && apt-get -y upgrade \
    && apt-get install -y \
    --no-install-recommends gcc build-essential \
    --no-install-recommends libgl1-mesa-glx libglib2.0-0 \
    && apt-get purge -y --auto-remove \
    gcc build-essential \
    libgl1-mesa-glx libglib2.0-0 \
    && rm -rf /var/lib/apt/lists/* 
ENV PATH=/root/.local/bin:$PATH

RUN pip install --no-cache-dir --upgrade pip
WORKDIR /app

# audio requirments file
COPY ./core/operators/audio_vec_embedding_requirements.txt /app/core/operators/audio_vec_embedding_requirements.txt
RUN pip install --no-cache-dir --user -r /app/core/operators/audio_vec_embedding_requirements.txt
# audio vec file
COPY ./core/operators/audio_vec_embedding.py /app/core/operators/audio_vec_embedding.py
# audio vec test and media files
COPY ./core/operators/sample_data/audio.wav /app/core/operators/sample_data/audio.wav
COPY ./core/operators/test_audio_vec_embedding.py /app/core/operators/test_audio_vec_embedding.py
# audio cnn model folder
COPY ./core/operators/audio_cnn_model/ /app/core/operators/audio_cnn_model/
# time test
COPY ./benchmark/audiovec/audio_vec_operator_time.py /app/benchmark/audiovec/audio_vec_operator_time.py
COPY ./benchmark/audiovec/audio_vec_operator_time.sh /app/benchmark/audiovec/audio_vec_operator_time.sh
RUN chmod +x ./benchmark/audiovec/audio_vec_operator_time.sh
# c-profile test
COPY ./benchmark/audiovec/audio_vec_operator_cprofile.py /app/benchmark/audiovec/audio_vec_operator_cprofile.py
COPY ./benchmark/audiovec/audio_vec_operator_cprofile.sh /app/benchmark/audiovec/audio_vec_operator_cprofile.sh
RUN chmod +x ./benchmark/audiovec/audio_vec_operator_cprofile.sh
# memory profiling tests
COPY ./benchmark/audiovec/audio_vec_operator_profile.py /app/benchmark/audiovec/audio_vec_operator_profile.py
COPY ./benchmark/audiovec/audio_vec_operator_profile_memray.sh /app/benchmark/audiovec/audio_vec_operator_profile_memray.sh
COPY ./benchmark/audiovec/audio_vec_operator_profile_pyinstrument.sh /app/benchmark/audiovec/audio_vec_operator_profile_pyinstrument.sh
RUN chomd +x ./benchmark/audiovec/audio_vec_operator_profile_memray.sh
RUN chmod +x ./benchmark/audiovec/audio_vec_operator_profile_pyinstrument.sh
# multi-core test
COPY ./benchmark/audiovec/audio_vec_operator_multicore.py /app/benchmark/audiovec/audio_vec_operator_multicore.py
COPY ./benchmark/audiovec/audio_vec_operator_multicore.sh /app/benchmark/audiovec/audio_vec_operator_multicore.sh
RUN chomd +x ./benchmark/audiovec/audio_vec_operator_multicore.sh
# main benchmark file
COPY ./benchmark/benchmark-audio.sh /app/benchmark/benchmark-audio.sh
RUN chomd +x ./benchmark/benchmark-audio.sh

RUN apt-get update && apt-get install -y vim zsh wget

CMD tail -f /dev/null


RUN apt-get update && apt-get install -y vim zsh
RUN apt-get update && apt-get install -y wget

CMD tail -f /dev/null
